<section class="about">
  <div class="container d-flex h-100 align-items-center">
    <div class="card-columns">
      <div class="card" style="background-color: #6d666630;">
         <div class="card-body">
           <a href="/tournaments/new" style="color: #a9a4a4;">
             <svg width="5em" height="5em" style="width: 100%;font-size: 2.1em;" viewBox="0 0 16 16" class="bi bi-plus-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
              <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
              </svg>
           </a>
        </div>
       </div>
      {{#each list}}
       <div class="card">
         <div class="card-body">
          <h5 class="card-title">{{ name }} [{{ type }}]</h5>
          <p class="card-text">
            <ul class="list-group" style="font-size: 14px;">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Команд
                <span class="badge badge-info badge-pill">{{ teams }}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Игроков
                <span class="badge badge-info badge-pill">{{ players }}</span>
              </li>
            </ul>
          </p>
        </div>
        <div class="card-footer">
          <a href="/tournaments/{{ id }}" class="btn btn-block btn-primary">Подробнее</a>
        </div>
       </div>
      {{/each}}
    </div>
  </div>
</section>
